{
  "name": "queertoronto",
  "version": "1.0.0",
  "description": "A Single Page Web Application that presents a community website with a list of events and organizations",
  "main": "server.js",
  "scripts": {
    "start": "npm run prod",
    "dev": "concurrently --kill-others \"webpack-dev-server --inline --hot\" \"nodemon ./server.js\"",
    "createDatabase": "node ./server/model/initial/createDatabase.js",
    "uploadLatest": "node ./adminScripts/uploadLatest.js",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules --mode=production",
    "prod": "node ./server.js",
    "server": "pm2 start ./server.js --name \"QueerTorontoCommunitySite\" ",
    "checklint": "eslint --ignore-path .gitignore .",
    "fixlint": "./node_modules/.bin/eslint --fix --ignore-path .gitignore .",
    "makepretty": "./node_modules/.bin/prettier --write --ignore-path .gitignore '**/*.js' '**/*.vue'",
    "test": "jest"
  },
  "keywords": [
    "Community",
    "Queer",
    "Toronto",
    "Gay",
    "Lesbian",
    "Bisexual",
    "Transgendered",
    "Trans",
    "Events"
  ],
  "homepage": "https://github.com/tomrembrown/QTCommunity",
  "author": "Tom Brown <tom@tomrembrown.com>",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tomrembrown/QTCommunity.git"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "axios": "^0.19.0",
    "base64-img": "^1.0.4",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.4",
    "concurrently": "^5.0.0",
    "connect-history-api-fallback": "^1.6.0",
    "core-js": "^3.2.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "luxon": "^1.19.3",
    "md5": "^2.2.1",
    "microdata-node": "^1.0.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "nodemailer": "^6.3.1",
    "nodemailer-mailgun-transport": "^1.4.0",
    "password-hash": "^1.2.2",
    "pg": "^7.12.1",
    "pm2": "^4.0.0",
    "prettier": "^1.18.2",
    "regenerator-runtime": "^0.13.3",
    "scrollmonitor": "^1.2.4",
    "vue": "^2.6.10",
    "vue-advanced-cropper": "^0.12.5",
    "vue-cookies": "^1.5.13",
    "vue-datetime": "^1.0.0-beta.10",
    "vue-google-autocomplete": "^1.1.0",
    "vue-highlight-words": "^1.2.0",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.1",
    "weekstart": "^1.0.0",
    "xmldom": "^0.1.27",
    "xpath": "0.0.27"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.6.3",
    "acorn": "^7.1.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "file-loader": "^4.2.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "sass-loader": "^8.0.0",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  }
}
